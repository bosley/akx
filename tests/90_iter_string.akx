(io/putf "Test: iter over strings\n\n")

(io/putf "Test 1: Empty string\n")
(let empty "")
(let result1 (iter empty (lambda [c] c)))
(io/putf "  Result: '%s'\n" result1)

(io/putf "\nTest 2: Single character\n")
(let single "A")
(let result2 (iter single (lambda [c] c)))
(io/putf "  Result: '%s'\n" result2)

(io/putf "\nTest 3: Replace characters\n")
(let str3 "abc")
(let result3 (iter str3 (lambda [c]
  (if (eq c "a") "X"
    (if (eq c "b") "Y"
      (if (eq c "c") "Z" c))))))
(io/putf "  Result: '%s'\n" result3)

(io/putf "\nTest 4: Remove vowels (replace with empty)\n")
(let str4 "hello")
(let result4 (iter str4 (lambda [c]
  (if (eq c "e") ""
    (if (eq c "o") "" c)))))
(io/putf "  Result: '%s'\n" result4)

(io/putf "\nTest 5: Double each character\n")
(let str5 "Hi")
(let result5 (iter str5 (lambda [c] (str/+ c c))))
(io/putf "  Result: '%s'\n" result5)

(io/putf "\nTest complete.\n")

