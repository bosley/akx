(import "$AKX_HOME/stdlib/math.akx")

(io/putf "=== Testing loop ===\n")

(let counter 0)
(io/putf "Counting to 5:\n")
(loop (lt counter 5)
  (begin
    (io/putf "  counter: %d\n" counter)
    (set counter (+ counter 1))))

(io/putf "Final counter: %d\n" counter)

(let sum 0)
(let i 1)
(io/putf "Sum 1 to 10:\n")
(loop (lte i 10)
  (begin
    (set sum (+ sum i))
    (set i (+ i 1))))
(io/putf "  sum: %d\n" sum)

(io/putf "=== All loop tests passed ===\n")

