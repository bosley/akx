(io/putf "=== Forms Affordance Tests ===\n")

(io/putf "Test 1: Define Counter form\n")
(form-define :Counter :int)
(io/putf "  PASS: Counter form defined\n")

(io/putf "Test 2: Add increment affordance\n")
(form-add-affordance :Counter :increment
  (lambda [x] (+ x 1)))
(io/putf "  PASS: Increment affordance added\n")

(io/putf "Test 3: Add decrement affordance\n")
(form-add-affordance :Counter :decrement
  (lambda [x] (- x 1)))
(io/putf "  PASS: Decrement affordance added\n")

(io/putf "Test 4: Add reset affordance\n")
(form-add-affordance :Counter :reset
  (lambda [x] 0))
(io/putf "  PASS: Reset affordance added\n")

(io/putf "Test 5: Define Calculator form\n")
(form-define :Calculator :real)
(io/putf "  PASS: Calculator form defined\n")

(io/putf "Test 6: Add add affordance to Calculator\n")
(form-add-affordance :Calculator :add
  (lambda [x y] (+ x y)))
(io/putf "  PASS: Add affordance added\n")

(io/putf "Test 7: Add multiply affordance to Calculator\n")
(form-add-affordance :Calculator :multiply
  (lambda [x y] (* x y)))
(io/putf "  PASS: Multiply affordance added\n")

(io/putf "\n=== All Affordance Tests Complete ===\n")
