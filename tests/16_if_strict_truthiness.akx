(cjit-load-builtin println :root "tests/builtins/println.c")

(println "Testing strict truthiness - only integer 1 is true")

(println "Test with integer -1 (should be false):")
(println "  " (if -1 "true" "false"))

(println "Test with integer 100 (should be false):")
(println "  " (if 100 "true" "false"))

(println "Test with string (should be false):")
(println "  " (if "hello" "true" "false"))

(println "Test with symbol t (should be false):")
(let sym 't)
(println "  " (if sym "true" "false"))

(println "Test with symbol nil (should be false):")
(let nilsym 'nil)
(println "  " (if nilsym "true" "false"))

(println "Test with exactly 1 (should be true):")
(println "  " (if 1 "true" "false"))

(println "Test with expression that evaluates to 1 (should be true):")
(let one 1)
(println "  " (if one "true" "false"))

(println "Strict truthiness tests completed")

