(io/putf "Testing strict truthiness - only integer 1 is true\n")

(io/putf "Test with integer -1 (should be false):\n")
(io/putf "  %s\n" (if -1 "true" "false"))

(io/putf "Test with integer 100 (should be false):\n")
(io/putf "  %s\n" (if 100 "true" "false"))

(io/putf "Test with string (should be false):\n")
(io/putf "  %s\n" (if "hello" "true" "false"))

(io/putf "Test with symbol t (should be false):\n")
(let sym 't)
(io/putf "  %s\n" (if sym "true" "false"))

(io/putf "Test with symbol nil (should be false):\n")
(let nilsym 'nil)
(io/putf "  %s\n" (if nilsym "true" "false"))

(io/putf "Test with exactly 1 (should be true):\n")
(io/putf "  %s\n" (if 1 "true" "false"))

(io/putf "Test with expression that evaluates to 1 (should be true):\n")
(let one 1)
(io/putf "  %s\n" (if one "true" "false"))

(io/putf "Strict truthiness tests completed\n")

