(io/putf "Test: Real number math operations\n\n")

(io/putf "Test 1: real/+ addition\n")
(let r1 (real/+ 1.5 2.5))
(io/putf "  1.5 + 2.5 = %f\n" r1)
(let r2 (real/+ 1.0 2.0 3.0 4.0))
(io/putf "  1.0 + 2.0 + 3.0 + 4.0 = %f\n" r2)

(io/putf "\nTest 2: real/- subtraction\n")
(let r3 (real/- 10.5 3.2))
(io/putf "  10.5 - 3.2 = %f\n" r3)
(let r4 (real/- 20.0 5.0 2.5))
(io/putf "  20.0 - 5.0 - 2.5 = %f\n" r4)

(io/putf "\nTest 3: real/* multiplication\n")
(let r5 (real/* 2.5 4.0))
(io/putf "  2.5 * 4.0 = %f\n" r5)
(let r6 (real/* 2.0 3.0 4.0))
(io/putf "  2.0 * 3.0 * 4.0 = %f\n" r6)

(io/putf "\nTest 4: real// division\n")
(let r7 (real// 10.0 2.0))
(io/putf "  10.0 / 2.0 = %f\n" r7)
(let r8 (real// 100.0 5.0 2.0))
(io/putf "  100.0 / 5.0 / 2.0 = %f\n" r8)

(io/putf "\nTest 5: real/%% modulo\n")
(let r9 (real/% 10.5 3.0))
(io/putf "  10.5 %% 3.0 = %f\n" r9)
(let r10 (real/% 7.8 2.5))
(io/putf "  7.8 %% 2.5 = %f\n" r10)

(io/putf "\nTest complete.\n")

