(let x 10)
(let y 20)
(let name "Alice")

(assert-true x "x should be truthy")
(assert-true 1 "1 should be truthy")
(assert-true "hello" "non-empty strings should be truthy")
(assert-true 3.14 "non-zero reals should be truthy")

(assert-false 0 "0 should be falsy")

(assert-eq x 10 "x should equal 10")
(assert-eq y 20 "y should equal 20")
(assert-eq name "Alice" "name should equal Alice")
(assert-eq 3.14 3.14 "reals should be comparable")

(assert-ne x y "x and y should not be equal")
(assert-ne x 99 "x should not equal 99")
(assert-ne name "Bob" "name should not equal Bob")

(let identity (lambda [a] a))
(let result (identity 42))
(assert-eq result 42 "identity lambda should work")

(let add (lambda [a b] (let sum a) sum))
(let sum-result (add 5 10))
(assert-eq sum-result 5 "lambda with multiple params should work")

(let make-value (lambda [] 100))
(let value (make-value))
(assert-eq value 100 "lambda returning value should work")

(assert-true (let z 30) "let should return truthy value")

