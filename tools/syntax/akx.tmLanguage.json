{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "AKX",
  "scopeName": "source.akx",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#environment-variables"
    },
    {
      "include": "#nucleus-builtins"
    },
    {
      "include": "#function-call"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#lists"
    },
    {
      "include": "#vectors"
    },
    {
      "include": "#maps"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.akx",
          "match": ";.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.akx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.akx",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.akx",
          "match": "(?<=^|[\\s()\\[\\]{}])[+-]?[0-9]+\\.[0-9]+(?=[\\s()\\[\\]{}]|$)"
        },
        {
          "name": "constant.numeric.integer.akx",
          "match": "(?<=^|[\\s()\\[\\]{}])[+-]?[0-9]+(?=[\\s()\\[\\]{}]|$)"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "constant.language.keyword.akx",
          "match": ":[a-zA-Z][a-zA-Z0-9-]*"
        }
      ]
    },
    "environment-variables": {
      "patterns": [
        {
          "name": "variable.other.environment.akx",
          "match": "\\$[A-Z_][A-Z0-9_]*"
        }
      ]
    },
    "nucleus-builtins": {
      "patterns": [
        {
          "name": "keyword.control.akx",
          "match": "\\b(cjit-load-builtin|let|set|lambda|if|import|assert/eq|assert/ne|assert/true|assert/false|print|println)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.akx",
          "match": "(?<=\\(|\\s)(\\+|\\-|\\*|\\/|%|=)(?=\\s|\\))"
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "name": "meta.function-call.akx",
          "begin": "\\(",
          "end": "\\)",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.list.begin.akx"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.list.end.akx"
            }
          },
          "patterns": [
            {
              "name": "entity.name.function.akx",
              "match": "\\G\\s*([a-zA-Z_+\\-*/%=<>!?][a-zA-Z0-9_+\\-*/%=<>!?-]*)",
              "captures": {
                "1": {
                  "name": "entity.name.function.akx"
                }
              }
            },
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "lists": {
      "patterns": [
        {
          "name": "meta.list.akx",
          "begin": "\\(",
          "end": "\\)",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.list.begin.akx"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.list.end.akx"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "vectors": {
      "patterns": [
        {
          "name": "meta.vector.akx",
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.vector.begin.akx"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.vector.end.akx"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "maps": {
      "patterns": [
        {
          "name": "meta.map.akx",
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.map.begin.akx"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.map.end.akx"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.akx",
          "match": "[a-zA-Z_+\\-*/%=<>!?][a-zA-Z0-9_+\\-*/%=<>!?-]*"
        }
      ]
    }
  }
}

